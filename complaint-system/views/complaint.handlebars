<form method="post" action="/registerComplaint">

    <h2>Register a Complaint</h2>
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" type="text" name="name" placeholder="Name" >
    </div>
    <div class="form-group">
        <label>Email</label>
        <input class="form-control" type="email" name="email" placeholder="Email">
    </div>
    <div class="form-group">
        <label>Contact Number</label>
        <input class="form-control" type="text" name="contact" placeholder="Phone Number">
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea type="text" class="form-control" name="desc" cols="30" rows="10" placeholder="Enter the Description"></textarea>
    </div>
    <button class="btn btn-success" type="submit">Submit Complaint</button>
    <a href="/mycomplaints" class="btn btn-info ml-2">View My Complaints</a>
    <br>
    <br>
    Wanna change your mind? <a class="btn btn-warning btn-sm" href="/">Back</a>
    <br>
    <br>

</form>

{{#if myComplaints}}
  <h3>My Complaints</h3>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Description</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {{#each myComplaints}}
      <tr>
        <td>{{_id}}</td>
        <td>{{desc}}</td>
        <td>{{status}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
{{/if}}